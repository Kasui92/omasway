# Keyboard Layout
set $keyboard_layout localectl status | awk '/X11 Layout/ {print $3}'

# Mod keys
set $mod Mod4
set $alt Mod1

# Vim-like navigation keys
set $left h
set $down j
set $up k
set $right l

# Workspace names
set $ws1 number 1
set $ws2 number 2
set $ws3 number 3
set $ws4 number 4
set $ws5 number 5
set $ws6 number 6

# Terminal
set $term alacritty

# Launcher
set $menu wofi --show drun --sort-order=alphabetical --style="$HOME/.local/share/omasway/default/wofi/search.css"

# Browser
set $browser firefox
set $browser_pwa chromium  --new-window --ozone-platform=wayland

# File Manager
set $fileManager nautilus --new-window

# PolicyKit agent
set $polkit_agent /usr/bin/mate-polkit

# Autotiling script
set $autotiling '[ -x "$(command -v autotiling)" ] && autotiling -w 1 3 5 7 9'

# Swaybg command
set $swaybg swaybg -i ~/.config/omasway/current/background -m fill

# Include Sway configuration files
include /etc/sway/config-vars.d/*