# Mod keys
set $mod Mod4
set $alt Mod1

# Vim-like navigation keys
set $left h
set $down j
set $up k
set $right l

# Terminal emulator
set $term alacritty

# Launcher menu
set $menu wofi --show drun --sort-order=alphabetical --style="$HOME/.local/share/omasway/default/wofi/search.css"

# Browser
set $browser firefox
set $browser_pwa  --new-window --ozone-platform=wayland

# File Manager
set $fileManager = nautilus --new-window

# workspace names
set $ws1 number 1
set $ws2 number 2
set $ws3 number 3
set $ws4 number 4
set $ws5 number 5
set $ws6 number 6

# PolicyKit agent
set $polkit_agent /usr/bin/mate-polkit

# Autotiling script
set $autotiling '[ -x "$(command -v autotiling)" ] && autotiling -w 1 3 5 7 9'

# Include Sway configuration files
include /etc/sway/config-vars.d/*